<UserControl
    x:Class="Cube.Pdf.App.Editor.FileListControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:my="clr-namespace:Cube.Pdf.App.Editor"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="400" d:DesignWidth="700">

    <!-- **********************************************************************
      Resources
    *********************************************************************** -->
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Themes/GenericDialog.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Themes/InsertStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <!-- **********************************************************************
      Main
    *********************************************************************** -->
    <ListView
        ItemsSource="{Binding Data.Files}"
        Style="{StaticResource InsertCollectionStyle}">
        <ListView.View>
            <GridView>
                <!-- **********************************************************
                    Filename
                *********************************************************** -->
                <GridViewColumn Width="200" DisplayMemberBinding="{Binding Name}">
                    <GridViewColumnHeader Content="{Binding FileName.Text}" />
                </GridViewColumn>

                <!-- **********************************************************
                    Type
                *********************************************************** -->
                <GridViewColumn Width="80">
                    <GridViewColumnHeader Content="{Binding FileType.Text}" />
                </GridViewColumn>

                <!-- **********************************************************
                    LastWriteTime
                *********************************************************** -->
                <GridViewColumn Width="130">
                    <GridViewColumnHeader Content="{Binding LastWriteTime.Text}" />
                    <GridViewColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding LastWriteTime, StringFormat='yyyy/MM/dd HH:mm:ss'}" />
                        </DataTemplate>
                    </GridViewColumn.CellTemplate>
                </GridViewColumn>

                <!-- **********************************************************
                    Length
                *********************************************************** -->
                <GridViewColumn Width="100">
                    <GridViewColumnHeader Content="{Binding FileLength.Text}" />
                    <GridViewColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Length, Converter={my:ByteConverterLite}}" />
                        </DataTemplate>
                    </GridViewColumn.CellTemplate>
                </GridViewColumn>
            </GridView>
        </ListView.View>
    </ListView>
</UserControl>